<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head',{title:title}) %>
        <link href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css" rel="stylesheet">
        <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
        <script>
            $(document).ready(function () {
                $('#indexData').DataTable();
            });
        </script>
</head>

<body>
    <%- include('../partials/navbar') %>
        <%- include('../partials/sidebar') %>
            <div class="p-4 sm:ml-64">
                <section class="bg-gray-50 p-3 sm:p-5">
                    <div class="bg-white shadow-md sm:rounded-lg mx-auto p-4 my-5">
                        <div class="flex justify-between items-center">
                            <h1 class="text-xl font-bold">List Users </h1>
                            <a href="/users/create" class="text-xl bg-blue-500 p-3 rounded-md text-white">Create</a>
                        </div>
                    </div>

                    <div class="bg-white shadow-md sm:rounded-lg mx-auto p-4 my-5 relative overflow-x-auto">
                        <table id="indexData" class="display w-full text-sm text-gray-500 ">
                            <thead class="text-xs text-gray-700 uppercase bg-gray-50 ">
                                <tr>
                                    <th>Action</th>
                                    <th>#</th>
                                    <th>Mobile No</th>
                                    <th>Total Balance</th>
                                    <th>Total Deposit</th>
                                    <th>Total Withdraw</th>
                                    <th>Total Bet</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (getData && getData.length> 0) { %>
                                    <% getData.forEach((data, index)=> { %>
                                        <tr key="<%= index %>">
                                            <td class="flex justify-center">
                                                <a href="/users/<%= data.id %>" class="mx-2 text-blue-500">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="/users/<%= data.id %>/edit" class="mx-2 text-green-700">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <button data-id="<%= data.id %>" data-url="users"
                                                    class="mx-2 deleteRecord text-red-500">
                                                    <i class="fas fa-trash-alt"></i>
                                                </button>
                                            </td>
                                            <td class="text-center">
                                                <%= index + 1 %>
                                            </td>
                                            <td class="text-center">
                                                <%= data.mobile_no %>
                                            </td>
                                            <td class="text-center">
                                                <%= data.total_balance %>
                                            </td>
                                            <td class="text-center">
                                                <%= data.total_deposit %>
                                            </td>
                                            <td class="text-center">
                                                <%= data.total_withdraw %>
                                            </td>
                                            <td class="text-center">
                                                <%= data.total_bet %>
                                            </td>
                                            <td class="text-center">
                                                <label class="inline-flex items-center me-5 cursor-pointer">
                                                    <input type="checkbox" value="" class="sr-only peer changeStatus"
                                                        data-id="<%= data?.id %>" data-url="users"
                                                        <%=data.status=="Block" ?"checked":"" %> >
                                                    <div
                                                        class="relative w-11 h-6 rounded-full peer peer-focus:ring-4 peer-focus:ring-green-300 peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-0.5 after:start-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-green-600">
                                                    </div>
                                                </label>
                                            </td>
                                        </tr>
                                        <% }) %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="2" class="text-center">No data available</td>
                                                </tr>
                                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </section>
            </div>
</body>

</html>