<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head',{title:title}) %>
        <link href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css" rel="stylesheet">
        <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
        <script>
            $(document).ready(function () {
                $('#indexData').DataTable();
            });
        </script>
</head>

<body>
    <%- include('../partials/navbar') %>
        <%- include('../partials/sidebar') %>
            <div class="p-4 sm:ml-64">
                <section class="bg-gray-50 p-3 sm:p-5">
                    <div class="bg-white shadow-md sm:rounded-lg mx-auto p-4 my-5">
                        <div class="flex justify-between items-center">
                            <h1 class="text-xl font-bold">List Game Strategy</h1>
                            <a href="/game-strategy/change-update"
                                class="text-xl bg-blue-500 p-3 rounded-md text-white">Change Update</a>
                            <a href="/game-strategy/create"
                                class="text-xl bg-blue-500 p-3 rounded-md text-white">Create</a>
                        </div>
                    </div>

                    <div class="bg-white shadow-md sm:rounded-lg mx-auto p-4 my-5 relative overflow-x-auto">
                        <table id="indexData" class="display w-full text-sm text-gray-500 ">
                            <thead class="text-xs text-gray-700 uppercase bg-gray-50 ">
                                <tr>
                                    <th>Action</th>
                                    <th>#</th>
                                    <th>Game Option</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (getData && getData.length> 0) { %>
                                    <% getData.forEach((data, index)=> { %>
                                        <tr key="<%= index %>">
                                            <td class="flex justify-center">
                                                <a href="/game-strategy/<%= data.id %>" class="mx-2 text-blue-500">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="/game-strategy/<%= data.id %>/edit"
                                                    class="mx-2 text-green-700">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <button data-id="<%= data.id %>" data-url="game-strategy"
                                                    class="mx-2 deleteRecord text-red-500">
                                                    <i class="fas fa-trash-alt"></i>
                                                </button>
                                            </td>
                                            <td class="text-center">
                                                <%= index + 1 %>
                                            </td>
                                            <td class="text-center">
                                                <%= data.game_option %>
                                            </td>
                                        </tr>
                                        <% }) %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="2" class="text-center">No data available</td>
                                                </tr>
                                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </section>
            </div>
</body>

</html>