<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head',{title:title}) %>
        <link href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css" rel="stylesheet">
        <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
        <script>
            $(document).ready(function () {
                $('#indexData').DataTable();
            });
        </script>
</head>

<body>
    <%- include('../partials/navbar') %>
        <%- include('../partials/sidebar') %>
            <div class="p-4 sm:ml-64">
                <section class="bg-gray-50 p-3 sm:p-5">
                    <div class="bg-white shadow-md sm:rounded-lg mx-auto p-4 my-5">
                        <div class="flex justify-between items-center">
                            <h1 class="text-xl font-bold">List Payment Withdraw</h1>
                        </div>
                    </div>

                    <div class="bg-white shadow-md sm:rounded-lg mx-auto p-4 my-5 relative overflow-x-auto">
                        <table id="indexData" class="display w-full text-sm text-gray-500 ">
                            <thead class="text-xs text-gray-700 uppercase bg-gray-50 ">
                                <tr>
                                    <th>Action</th>
                                    <th>#</th>
                                    <th>Mobile No</th>
                                    <th>Upi Id</th>
                                    <th>Amount</th>
                                    <th>Photo</th>
                                    <th>Transaction No</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (getData && getData?.length> 0) { %>
                                    <% getData?.forEach((data, index)=> { %>
                                        <tr key="<%= index %>" class="bg-transparent">
                                            <td class="my-auto">
                                                <div class="flex justify-center bg-transparent">
                                                    <a href="/payment-withdraw/<%= data?.id %>"
                                                        class="mx-2 text-blue-500 bg-transparent">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="/payment-withdraw/<%= data?.id %>/edit"
                                                        class="mx-2 text-green-700 bg-transparent">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <button data-id="<%= data?.id %>" data-url="payment-withdraw"
                                                        class="mx-2 deleteRecord text-red-500 bg-transparent">
                                                        <i class="fas fa-trash-alt"></i>
                                                    </button>
                                                </div>
                                            </td>
                                            <td class="text-center">
                                                <%= index + 1 %>
                                            </td>
                                            <td class="text-center">
                                                <%= data?.mobile_no %>
                                            </td>
                                            <td class="text-center">
                                                <%= data?.upi_id %>
                                            </td>
                                            <td class="text-center">
                                                <%= data?.amount %>
                                            </td>
                                            <td class="text-center">
                                                <% if(data?.photo){ %>
                                                    <img src="/images/<%= data?.photo %>" alt="Photo"
                                                        class="w-24 h-24 mx-auto">
                                                    <% } %>
                                            </td>
                                            <td class="text-center">
                                                <%= data?.transaction_no %>
                                            </td>
                                            <td class="text-center">
                                                <%= data?.status %>
                                            </td>
                                        </tr>
                                        <% }) %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="2" class="text-center">No data available</td>
                                                </tr>
                                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </section>
            </div>
</body>

</html>